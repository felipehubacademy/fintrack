# Belvo Open Finance Integration
# Copy this file to .env.local and fill in your Belvo credentials

# Belvo API Configuration
BELVO_API_URL=https://sandbox.belvo.com
BELVO_SECRET_ID=your_belvo_secret_id_here
BELVO_SECRET_PASSWORD=your_belvo_secret_password_here

# Optional: Belvo App ID for My Belvo Portal
NEXT_PUBLIC_BELVO_APP_ID=your_app_id_here

# Supabase Configuration (if not already set)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key
