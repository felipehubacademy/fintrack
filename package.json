{
  "name": "fintrack-monorepo",
  "version": "1.0.0",
  "description": "FinTrack - Gest√£o Financeira Familiar Inteligente (Web + Mobile)",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/web",
    "packages/shared"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:web",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:mobile": "cd packages/mobile && npm start",
    "build:web": "npm run build --workspace=packages/web",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:mobile": "cd packages/mobile && npm run build",
    "test": "npm run test --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules",
    "install:all": "npm install && cd packages/mobile && npm install"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
